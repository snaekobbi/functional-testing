<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:pxi="http://www.daisy.org/ns/pipeline/xproc/internal"
               xmlns:p="http://www.w3.org/ns/xproc"
               xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
               xmlns:dotify="http://code.google.com/p/dotify/"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="../css_inline_and_px_transform_type_css.xpl">
  
  <x:scenario label="The footer contains the range of chapter numbers">
    <x:call step="pxi:css-inline-and-px-transform-type-css">
      <x:input port="source">
        <x:document type="file" href="../../resources/counters-variables/chapter-range.xml"/>
      </x:input>
      <x:option name="transform" select="'(formatter:dotify)(locale:de)'"/>
      <x:option name="temp-dir" select="$temp-dir"/>
    </x:call>
    <x:scenario id="102.2" label="If both right and left hand pages have a footer, it's the range of chapters contained in the current braille page.">
      <x:call>
        <x:option name="stylesheet" select="resolve-uri('style.css')"/>
      </x:call>
      <x:context label="result">
        <x:document type="port" port="result"/>
      </x:context>
      <x:expect label="result" type="custom" href="http://www.daisy.org/pipeline/modules/braille/pef-utils/library.xpl" step="x:pef-compare">
        <x:document type="file" href="../../resources/counters-variables/chapter-range-2.pef"/>
      </x:expect>
    </x:scenario>
    <x:scenario id="102.1" label="If only right hand pages have a footer, it's the range of chapters contained in the previous and current braille pages.">
      <x:call>
        <x:option name="stylesheet" select="resolve-uri('style.css')"/>
      </x:call>
      <x:context label="result">
        <x:document type="port" port="result"/>
      </x:context>
      <x:expect label="result" type="custom" href="http://www.daisy.org/pipeline/modules/braille/pef-utils/library.xpl" step="x:pef-compare">
        <x:document type="file" href="../../resources/counters-variables/chapter-range-1.pef"/>
      </x:expect>
    </x:scenario>
  </x:scenario>
  
</x:description>
